package lesson6_ParallelMapperImpl;

import java.util.LinkedList;

public class ThreadsQueue {
	int cntThreads;
	PoolWorker[] threads;
	LinkedList queue;
	
	
	
	private class PoolWorker extends Thread {
		public void run() {
			Runnable r;
			while (true) {
				synchronized (queue) {
					while (queue.isEmpty()) {
						try {
							queue.wait();
						} catch (InterruptedException e) {
						} 
					}
					r = (Runnable) queue.removeFirst();
				}
				r.run();
			}
		}
	}
}
