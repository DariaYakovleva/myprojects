package lesson6_ParallelMapperImpl;

import java.util.LinkedList;

public class ThreadsQueue {
	int cntThreads;
	PoolWorker[] threads;
	LinkedList<Runnable> queue;
	
	public ThreadsQueue(int cntThreads) {
		this.cntThreads = cntThreads;
		threads = new PoolWorker[cntThreads];
		queue = new LinkedList<>();
		for (int i = 0; i < cntThreads; i++) {
			threads[i] = new PoolWorker();
			threads[i].start();
		}
	}
	
	public void applyMap(Runnable r) {
		synchronized (queue) {
			queue.addLast(r);
			queue.notifyAll();
		}
	}
	public void stopAll() {
		System.err.println("TRY to stop threads");
		for (int i = 0; i < cntThreads; i++) {
			threads[i].interrupt();
			threads[i].stopT();
		}
	}
	
	private class PoolWorker extends Thread {
		private volatile boolean stopThread = false;
		public void run() {
			Runnable r;
			while (!stopThread) {
				synchronized (queue) {
					while (queue.isEmpty()) {
						try {
							queue.wait();
						} catch (InterruptedException e) {
						} 
					}
					r = (Runnable) queue.removeFirst();
				}
				r.run();
			}
		}
		public void stopT() {
			stopThread = true;
		}
	}
}
